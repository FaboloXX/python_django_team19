{% extends 'base.jinja2' %}

{% block title %}
    Оплата с чужого счета
{% endblock %}


{% block content %}
  <div class="Middle Middle_top">
    <div class="Middle-top">
      <div class="wrap">
        <div class="Middle-header">
          <h1 class="Middle-title">Оплата
          </h1>
          <ul class="breadcrumbs Middle-breadcrumbs">
            <li class="breadcrumbs-item"><a href="{{ url('product:home') }}">home</a>
            </li>
            <li class="breadcrumbs-item breadcrumbs-item_current"><span>Оплата</span>
            </li>
          </ul>
        </div>
      </div>
    </div>
    <div class="Section">
      <div class="wrap">
        <form class="form Payment" method="post">
          {% csrf_token %}
          <div class="Payment-card">
            <div class="form-group">
              <label class="form-label">Номер счета
              </label>
              {{ form.card_number }}
              {% if form.card_number.errors %}
                  <div class="form-error">
                      {{ form.card_number.errors }}
                  </div>
              {% endif %}
            </div>
            <div class="form-group"><a class="btn btn_success Payment-generate" href="#">Сгенирировать случайный счет</a>
            </div>
          </div>
          <div class="Payment-pay">
              <input type="submit" class="btn btn_primary" value="Оплатить">
          </div>
        </form>
      </div>
    </div>
  </div>
{% endblock %}

