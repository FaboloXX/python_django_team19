{% extends 'base.jinja2' %}


{% block title%}{{ product.name }}{% endblock %}

{% block content %}
    <div class="Middle-top">
      <div class="wrap">
        <div class="Middle-header">
          <h1 class="Middle-title">MEGANO PRODUCT</h1>
          <ul class="breadcrumbs Middle-breadcrumbs">
            <li class="breadcrumbs-item"><a href="index.html">home</a>
            </li>
            <li class="breadcrumbs-item breadcrumbs-item_current"><span>Product</span>
            </li>
          </ul>
        </div>
      </div>
    </div>
    <div class="Section">
      <div class="wrap">
        <div class="Product">
          <div class="ProductCard">
            <div class="ProductCard-look">
              <div class="ProductCard-photo">
                <div class="ProductCard-sale">-15%
                </div><img src="" alt="product-image.png"/>
              </div>
              <div class="ProductCard-picts"><a class="ProductCard-pict ProductCard-pict_ACTIVE" href=""><img src="" alt="bigGoods.png"/></a><a class="ProductCard-pict" href="/img/content/home/slider.png"><img src="img/content/home/slider.png" alt="slider.png"/></a><a class="ProductCard-pict" href="img/content/home/videoca.png"><img src="img/content/home/videoca.png" alt="videoca.png"/></a>
              </div>
            </div>
            <div class="ProductCard-desc">
              <div class="ProductCard-header">
                <h2 class="ProductCard-title">{{ product.name }}
                </h2>
                <div class="ProductCard-info">
                  <div class="ProductCard-cost">
                    <div class="ProductCard-price">{{ product.price }}$
                    </div>
                  </div>
                </div>
              </div>
              <div class="ProductCard-text">
                  {{ product.description }}
              </div>
              <div class="ProductCard-cart">
                <div class="ProductCard-cartElement ProductCard-cartElement_amount">
                  <div class="Amount Amount_product">
                    <button class="Amount-remove" type="button">
                    </button>
                    <input type="hidden" name="id" value="{{ product.id }}">
                    <input class="Amount-input form-input" name="quantity" type="text" value="1">
                    <button class="Amount-add" type="button"></button>
                  </div>
                </div>
                <div class="ProductCard-cartElement"><button class="btn btn_primary" type="submit"><img class="btn-icon" src="{{ static('img/icons/card/cart_white.svg')}}" alt="cart_white.svg"/><span class="btn-content">Add To Cart</span></button>
                </div>
              </form>
              <div class="ProductCard-footer">
                <div class="ProductCard-tags">
                  <strong class="ProductCard-tagsTitle">Tags:
                  </strong><a href="#">Accesories</a>,<a href="#">Creative</a>,<a href="#">Design</a>,<a href="#">Gaming</a>
                </div>
              </div>
            </div>
          </div>
          <div class="Tabs Tabs_default">
            <div class="Tabs-links"><a class="Tabs-link_ACTIVE Tabs-link" href="#description"><span>Description</span></a><a class="Tabs-link" href="#addit"><span>AdditionaL Info</span></a><a class="Tabs-link" href="#reviews"><span>Reviews ({{ reviews|count }})</span></a>
            </div>
            <div class="Tabs-wrap">
              <div class="Tabs-block" id="description">
                <h2>Megano Store Hystory
                </h2>
                <p>
                    {{ product.description }}
                </p>
                  <img class="pict pict_right" src="" alt="bigGoods.png"/>
                <ul>
                  <li>Lorem ipsum dolor sit amet, consectetuer
                  </li>
                  <li>adipiscing elit doli.&#32;<em>Aenean</em>&#32;commodo ligula
                  </li>
                  <li>eget dolor. Aenean massa. Cumtipsu sociis
                  </li>
                  <li>natoque penatibus et magnis dis parturient
                  </li>
                  <li>montesti, nascetur ridiculus mus. Donec
                  </li>
                  <li>quam felis, ultricies nec, pellentesque eutu
                  </li>
                </ul>
                <div class="clearfix">
                </div>
                <div class="table">
                  <table>
                    <tr>
                      <th>Tech Specs
                      </th>
                      <th>Value
                      </th>
                    </tr>
                    <tr>
                      <td>ываыв
                      </td>
                      <td>llslssl
                      </td>
                    </tr>
                  </table>
                </div>
              </div>
              <div class="Tabs-block" id="sellers">
                <div class="Categories Categories_product">
                </div>
              </div>
              <div class="Tabs-block" id="addit">
                <div class="Product-props">
                  <div class="Product-prop">
                    <strong>Lorem
                    </strong><span> Pfizer</span>
                  </div>
                  <div class="Product-prop">
                    <strong>ipsum
                    </strong><span> Lorem ipsum dolor sit</span>
                  </div>
                  <div class="Product-prop">
                    <strong>dolor sit
                    </strong><span> 5 ans</span>
                  </div>
                  <div class="Product-prop">
                    <strong>psum dolo
                    </strong><span> 2–3 jours</span>
                  </div>
                </div>
              </div>
              <div class="Tabs-block" id="reviews">
                <header class="Section-header">
                  <h3 class="Section-title">{{ product.reviews.filter(product=product.id).count() }} Reviews</h3>
                </header>
              <div class="Comments">
              {% for review in product.reviews.filter(product=product.id) %}
                  <div class="Comment">
                    <div class="Comment-column Comment-column_pict">
                          {% if review.user.avatar %}
                            <img class="Comment-avatar" src="{{ review.user.avatar.url }}" alt="avatar">
                          {% else %}
                            <img class="Comment-avatar" src="" alt="">
                          {% endif %}
                    </div>
                    <div class="Comment-column">
                      <header class="Comment-header">
                        <div>
                          <strong class="Comment-title">{{ review.user.full_name }}</strong>
                            <span class="Comment-date">{{ review.created_at.strftime('%H:%M %Y-%m-%d') }}</span>
                        </div>
                      </header>
                      <div class="Comment-content">{{ review.text }}</div>
                    </div>
                  </div>
              {% endfor %}
              </div>

                <header class="Section-header Section-header_product">
                  <h3 class="Section-title">Add Review
                  </h3>
                </header>
                <div class="Tabs-addComment">
                    {% if request.user.is_authenticated %}
                    <form class="form" method="post" action="{{ url('product', slug=product.slug) }}">
                        {% csrf_token %}
                        <div class="form-group">
                          <textarea class="form-textarea" name="text" id="review" placeholder="Review" {{ form.text }}</textarea>
                        </div>
                        <div class="form-group">
                        <div class="row">
                        <div class="row-block">
                          <input class="form-input" id="name" name="name" type="text" placeholder="Name" value="{{ request.user.full_name }}"></div>
                        <div class="row-block">
                          <input class="form-input" id="email" name="email" type="text" placeholder="Email" value="{{ request.user.email }}">
                        </div>
                      </div>
                    </div>
                    <div class="form-group">
                      <button class="btn btn_muted" type="submit">Submit Review</button>
                    </div>
                    {% else %}
                        <p><a href="/"><h5>Войти / зарегистрироваться</h5></a></p>
                    {% endif %}

                  </form>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
{% endblock %}