{% extends "base.jinja2" %}

{% block title %}
    Корзина
{% endblock %}

{% block content %}
<div class="Middle Middle_top">
    <div class="Middle-top">
        <div class="wrap">
            <div class="Middle-header">
                <h1 class="Middle-title">Корзина
                </h1>
                <ul class="breadcrumbs Middle-breadcrumbs">
                    <li class="breadcrumbs-item"><a href="{{ url('goods:home') }}">Главная</a>
                    </li>
                    <li class="breadcrumbs-item breadcrumbs-item_current"><span>Корзина</span>
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <div class="Section">
        <div class="wrap">
            {% if request.user.is_authenticated %}
                {% for form in forms %}
                    {% with product=form.instance %}
                        <form class="form" id="cart_form" method="post" action="{{ url('cart:cart_add', product.id) }}">
                            {% csrf_token %}
                            {% include "app_cart/cart_model_item.jinja2" %}
                        </form>
                    {% endwith %}
                {% endfor %}
            {% else %}
                {% for item in cart %}
                    {% with product=item.product %}
                        <form class="form" id="cart_form" method="post" action="{{ url('cart:cart_add', product.id) }}">
                            {% include "app_cart/cart_session_item.jinja2" %}
                        </form>
                    {% endwith %}
                {% endfor %}
            {% endif %}
            {% with total_price = cart.get_total_price() %}
                <div class="Cart-total">
                    {% if total_price > 0 %}
                    <div class="Cart-block Cart-block_total">
                        <strong class="Cart-title">Итого:
                        </strong><span class="Cart-price">${{ total_price }}</span>
                    </div>
                    <div class="Cart-block">
                        <button class="btn btn_success btn_lg"
                                type="button"
                                onclick="window.location.href = '{{ url('order:order_step_1') }}';">
                            Оформить заказ
                        </button>
                    </div>
                    {% else %}
                        <strong class="Cart-title">Ваша корзина пуста. Перейдите в <a href="{{ url('goods:catalog') }}">каталог</a>, чтобы совершить покупки</strong>
                    {% endif %}
                </div>
            {% endwith %}
        </div>
    </div>
</div>
{% endblock %}