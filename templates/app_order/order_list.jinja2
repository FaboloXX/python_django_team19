<div class="Section-content">
    <div class="Orders">
        {% if orders.filter(user=request.user) %}
            {% for order in orders.filter(user=request.user) %}
            <div class="Order Order_anons">
            <div class="Order-personal"><div class="row">
                <div class="row-block">
                    <a class="Order-title" href="{{ url('order:detail_order', pk=order.pk) }}">
                        Заказ <span class="Order-numberOrder">№{{ order.id }}</span> от <span class="Order-dateOrder">{{ order.created_at.strftime('%Y-%m-%d') }}</span>
                    </a>
                </div>
                <div class="row-block"><div class="Order-info Order-info_delivery">
                    <div class="Order-infoType">
                        Тип доставки:
                    </div>
                    <div class="Order-infoContent">
                        {{ order.get_delivery_type_display() }}
                    </div>
                </div><div class="Order-info Order-info_pay">
                    <div class="Order-infoType">
                        Оплата:
                    </div>
                    <div class="Order-infoContent">
                        {{ order.get_payment_type_display() }}
                    </div>
                </div><div class="Order-info">
                    <div class="Order-infoType">
                        Общая стоимость:
                    </div>
                    <div class="Order-infoContent">
                        <span class="Order-price">

                        </span>
                    </div>
                </div><div class="Order-info Order-info_status">
                    <div class="Order-infoType">
                        Статус:
                    </div>
                    <div class="Order-infoContent">
                        {{ order.get_status_display() }}
                    </div>
                </div>
                </div>
            </div>
            </div>
        </div>
        {% endfor %}
        {% else %}
            <p>Заказов пока нет.</p>
        {% endif %}
    </div>
</div>