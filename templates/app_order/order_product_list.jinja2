{% for item in order.cart.products.all() %}
    <div class="Cart Cart_order">
    <div class="Cart-product">
        <div class="Cart-block Cart-block_row">
            {% if item.product.image %}
                <div class="Cart-block Cart-block_pict"><a class="Cart-pict" href="{{ item.product.get_absolute_url() }}">
                    <img class="Cart-img" src="{{ item.product.image.url }}" alt="product-image.png"/></a>
                </div>
            {% endif %}
            <div class="Cart-block Cart-block_info">
                <a class="Cart-title" href="{{ item.product.get_absolute_url() }}">
                    {{ item.product.name }}
                </a>
                <div class="Cart-desc">
                    {{ item.product.description|truncatewords(20) }}
                </div>
                </div>
                <div class="Cart-block Cart-block_price">
                    <div class="Cart-price">
                        ${{ item.product.price }}
                    </div>
                </div>
            </div>
            <div class="Cart-block Cart-block_row">
                <div class="Cart-block Cart-block_amount">
                    {{ item.quantity }} шт.
                </div>
            </div>
        </div>
{% endfor %}

<div class="Cart-total">
    <div class="Cart-block Cart-block_total">
        <strong class="Cart-title">
            Итого:
            <span class="Cart-price">
                ${{ order.total_price }}
            </span>
        </strong>
    </div>
    {% if not order_paid %}
        <div class="Cart-block">
            <a class="btn btn_primary btn_lg" href="{{ url('order:order_step_1') }}">
                Оплатить
            </a>
        </div>
    {% endif %}
</div>
</div>
