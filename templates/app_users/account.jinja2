{% extends "base.jinja2" %}

{% block content %}
<div class="Middle Middle_top">
    <div class="Middle-top">
        <div class="wrap">
            <div class="Middle-header">
                <h1 class="Middle-title">Личный кабинет
                </h1>
                <ul class="breadcrumbs Middle-breadcrumbs">
                    <li class="breadcrumbs-item"><a href="{{ url('product:home') }}">домой</a>
                    </li>
                    <li class="breadcrumbs-item breadcrumbs-item_current"><span>Личный кабинет</span>
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <div class="Section Section_column Section_columnLeft">
        <div class="wrap">
            <div class="Section-column">
                <div class="Section-columnSection">
                    <header class="Section-header">
                        <strong class="Section-title">Навигация
                        </strong>
                    </header>
                    <div class="Section-columnContent">
                        <div class="NavigateProfile">
                            <ul class="menu menu_vt">
                                <li class="menu-item_ACTIVE menu-item"><a class="menu-link" href="{{ url('users:account') }}">Личный
                                    кабинет</a>
                                </li>
                                <li class="menu-item"><a class="menu-link" href="{{ url('users:profile') }}">Профиль</a>
                                </li>
                                <li class="menu-item"><a class="menu-link" href="{{ url('order:history') }}">История заказов</a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
            <div class="Section-content">
                <div class="Account">
                    <div class="Account-group">
                        <div class="Account-column">
                            <div class="Account-avatar">
                                <img src="{% if request.user.avatar %} {{ request.user.avatar.url }} {% else %} {{ static('static/img/icons/user_icon.png') }} {% endif %}" alt="аватар"/>
                            </div>
                        </div>
                        <div class="Account-column">
                            <div class="Account-name">{{ request.user.full_name }}
                            </div>
                            <a class="Account-editLink" href="{{ url('users:profile') }}">Редактировать профиль</a>
                        </div>
                    </div>
                    {% if cart.cart %}
                        <div class="Account-group">
                            <div class="Account-column Account-column_full">
                                <div class="Order Order_anons">
                                    <div class="Order-personal">
                                        <div class="row">
                                            <div class="row-block"><a class="Order-title"
                                                                      href="{{ url('order:detail_order', last_order.id) }}">Заказ&#32;<span
                                                    class="Order-numberOrder">№{{ last_order.id }}</span>&#32;от&#32;<span
                                                    class="Order-dateOrder">{{ last_order.created_at.strftime("%d.%m.%Y") }}</span></a>
                                                <div class="Account-editLink"><a href="{{ url('order:history') }}">История
                                                    заказов</a>
                                                </div>
                                            </div>
                                            <div class="row-block">
                                                <div class="Order-info Order-info_delivery">
                                                    <div class="Order-infoType">Тип доставки:
                                                    </div>
                                                    <div class="Order-infoContent">{{ last_order.get_delivery_type_display() }}
                                                    </div>
                                                </div>
                                                <div class="Order-info Order-info_pay">
                                                    <div class="Order-infoType">Оплата:
                                                    </div>
                                                    <div class="Order-infoContent">{{ last_order.get_payment_type_display() }}
                                                    </div>
                                                </div>
                                                <div class="Order-info">
                                                    <div class="Order-infoType">Общая стоимость:
                                                    </div>
                                                    <div class="Order-infoContent">${{ last_order.total_price }}
                                                    </div>
                                                </div>
                                                <div class="Order-info Order-info_status">
                                                    <div class="Order-infoType">Статус:
                                                    </div>
                                                    <div class="Order-infoContent">{{ last_order.get_status_display() }}
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}